<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PriSecFileStorageWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">PriSecFileStorageWeb</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                User Operations
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-page="/UserGenerateKey">1. User Generate Key</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/UserChooseStorageID">2. User Choose Storage ID</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/UserImportInformationFromZip">2. User Import Information</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/UserOfflineBackupAllKeys">3. User Backup Information</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/UserDecryptFileContent">3. User Decrypt Files</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                Owner Payment
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-page="/OwnerMakePayment">1. Owner Make Payment</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/OwnerRenewPayment">2. Owner Renew Payment</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                Grant Access(Owner)
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-page="/OwnerAddUser">1. Owner Grant Access To Users</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/OwnerRemoveUser">2. Owner Remove Access From Users</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                Other Operations(Owner)
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-page="/OwnerChooseStorageID">1. Owner Choose Storage ID</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/OwnerUploadFile">2. Owner Upload Signed Endpoint Encrypted File</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/OwnerCheckFileContent">3. Owner Check File</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/OwnerDecryptFileContent">3. Owner Decrypt File</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/OwnerDeleteFileContent">3. Owner Delete File</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/ImportInformationFromZip">1. Owner Import Information</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/OfflineBackupAllKeys">2. Owner Backup Information</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (ViewData["Title"]!=null && ViewData["Title"].ToString().CompareTo("Home") != 0)
            {
                <h1 class="text-center">@ViewData["Title"]</h1>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - PriSecFileStorageWeb - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
